extends ../../layout

block content
  .light-card
    .card-body
      .row
        .col-xs-12
          .title Dependency Types
            a.pull-right.btn.btn-primary(href='/admin/dependency/add')
              span.glyphicon.glyphicon-plus
              | &nbsp;Add New
      table.table
        thead
          tr
            th Name
        tbody
        each dep in types
          tr
            td
              a(href='/admin/dependency/edit/' + dep.id)
                =dep.name
