doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title= pagetitle
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .header
      .container
        nav
          ul.nav.nav-pills.pull-right
            li.active
              a(href='/') Home
            if session.admin
              li.active
                a(href='/admin/') Admin
        a.title(href='/')
          if logo
            img.hidden-xs.logo(src=logo)
          h3= pagetitle
    .wrapper
      .container
        if flash
          while message = flash.shift()
            .alert(class='alert-' + message.type)
              p= message.message
        block content
    footer.footer
      .container
        div.left
          a(href='/download/') Latest
          if nightly
            |  |&nbsp;
            a(href='/nightly/') Nightly
          if session.admin
            |  |&nbsp;
            a(href='/admin/logout') Logout
        div.right
          | Powered by&nbsp;
          a(href="http://github.com/Flydiverny/app-portal", style="color: #777;") AppPortal

    script(src='/javascripts/jquery-3.1.1.slim.min.js')
    script(src='/javascripts/bootstrap.min.js')

    block script
